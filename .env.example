# Server
SERVER_PORT=8080
LOG_LEVEL=info

# RabbitMQ (required)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_PREFETCH=10

# Retry configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=5s
RETRY_MAX_DELAY=60s
RETRY_BACKOFF_MULTIPLIER=2
RETRY_JITTER_FACTOR=0.2

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# SMTP (Email) - configured for Mailhog in development
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false
SMTP_FROM_ADDRESS=noreply@example.com

# Templates
TEMPLATES_PATH=./templates

# Shutdown
SHUTDOWN_TIMEOUT=30s
